<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="circleImageViewStyle">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="navHeaderTitleStyle">
        <item name="android:textSize">@dimen/title_text_size</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="navSubheaderTitleStyle">
        <item name="android:textSize">@dimen/medium_text_size</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="navSubheaderStyle">
        <item name="android:textSize">@dimen/medium_text_size</item>
        <item name="android:textColor">@color/blue_500</item>
    </style>

    <style name="navItemTextStyle">
        <item name="android:textSize">@dimen/pre_medium_text_size</item>
    </style>

    <style name="settingsItemStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@drawable/ripple_effect</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:paddingStart">@dimen/horizontal_margin</item>
        <item name="android:paddingTop">@dimen/horizontal_small_margin</item>
        <item name="android:paddingBottom">@dimen/horizontal_small_margin</item>
    </style>

    <style name="settingsItemHeaderTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textColor">@color/gray_700</item>
        <item name="android:textSize">@dimen/medium_text_size</item>
    </style>

    <style name="settingsItemSubheaderTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginTop">@dimen/vertical_very_small_margin</item>
        <item name="android:textColor">@color/gray_300</item>
        <item name="android:textSize">@dimen/small_text_size</item>
    </style>

    <style name="authPasswordTextStyle">
        <item name="android:backgroundTint">@color/blue_500</item>
        <item name="android:textColor">@color/gray_500</item>
        <item name="android:textColorHint">@color/gray_200</item>
        <item name="android:textColorHighlight">@color/blue_100_alpha_40</item>
        <item name="android:textCursorDrawable">@drawable/background_cursor</item>
    </style>

    <style name="wrongInputTextStyle">
        <item name="android:textColor">@color/gray_500</item>
    </style>

    <style name="nextButtonTextStyle">
        <item name="android:textSize">@dimen/medium_text_size</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="postItemHeaderTextStyle">
        <item name="android:textColor">@color/gray_700</item>
        <item name="android:textSize">@dimen/medium_text_size</item>
    </style>

    <style name="postItemSubheaderTextStyle">
        <item name="android:textColor">@color/gray_300</item>
        <item name="android:textSize">@dimen/pre_medium_text_size</item>
    </style>

    <style name="addressItemHeaderTextStyle">
        <item name="android:textColor">@color/gray_700</item>
        <item name="android:textSize">@dimen/medium_text_size</item>
    </style>

    <style name="addressItemSubheaderTextStyle">
        <item name="android:textColor">@color/gray_300</item>
        <item name="android:textSize">@dimen/small_text_size</item>
    </style>
</resources>