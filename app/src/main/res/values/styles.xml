<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="circleImageViewStyle">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="toolbarStyle">
        <item name="android:background">?backgroundToolbar</item>
        <item name="navigationIconTint">?colorToolbarIcon</item>
        <item name="titleTextColor">?colorToolbarTitle</item>
        <item name="subtitleTextColor">?colorToolbarSubtitle</item>
        <item name="subtitleTextAppearance">@style/toolbarSubtitleTextStyle</item>
    </style>

    <style name="toolbarSubtitleTextStyle">
        <item name="android:textSize">@dimen/pre_medium_text_size</item>
    </style>

    <style name="collapsingToolbarStyle">
        <item name="navigationIconTint">?colorToolbarIcon</item>
        <item name="titleTextColor">?colorToolbarTitle</item>
        <item name="subtitleTextColor">?colorToolbarSubtitle</item>
    </style>

    <style name="imageViewerToolbarStyle">
        <item name="navigationIconTint">?colorToolbarIcon</item>
        <item name="titleTextColor">?colorToolbarTitle</item>
        <item name="subtitleTextColor">?colorToolbarSubtitle</item>
        <item name="subtitleTextAppearance">@style/toolbarSubtitleTextStyle</item>
    </style>

    <style name="markerCreatorToolbarStyle">
        <item name="titleTextColor">?colorMarkerCreatorToolbarTitle</item>
        <item name="subtitleTextColor">?colorMarkerCreatorToolbarSubtitle</item>
        <item name="subtitleTextAppearance">@style/toolbarSubtitleTextStyle</item>
    </style>

    <style name="navHeaderTitleStyle">
        <item name="android:textColor">?colorNavigationHeader</item>
        <item name="android:textSize">@dimen/title_text_size</item>
    </style>

    <style name="navSubheaderTitleStyle">
        <item name="android:textColor">?colorNavigationSubheader</item>
        <item name="android:textSize">@dimen/medium_text_size</item>
    </style>

    <style name="navItemHeaderStyle">
        <item name="android:textColor">?colorNavigationItemHeader</item>
        <item name="android:textSize">@dimen/medium_text_size</item>
    </style>

    <style name="navItemTextStyle">
        <item name="android:textSize">@dimen/pre_medium_text_size</item>
    </style>

    <style name="settingsItemStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@drawable/ripple_effect</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:paddingStart">@dimen/horizontal_margin</item>
        <item name="android:paddingTop">@dimen/horizontal_small_margin</item>
        <item name="android:paddingBottom">@dimen/horizontal_small_margin</item>
    </style>

    <style name="settingsItemHeaderTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">?colorPrimaryText</item>
        <item name="android:textSize">@dimen/medium_text_size</item>
    </style>

    <style name="settingsItemSubheaderTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/vertical_very_small_margin</item>
        <item name="android:textColor">?colorSecondaryText</item>
        <item name="android:textSize">@dimen/small_text_size</item>
    </style>

    <style name="authPasswordTextStyle">
        <item name="android:backgroundTint">?colorAccent</item>
        <item name="android:textColor">?colorPrimaryText</item>
        <item name="android:textColorHint">?colorTertiaryText</item>
        <item name="android:textColorHighlight">@color/blue_100_alpha_40</item>
        <item name="android:textCursorDrawable">@drawable/background_cursor</item>
    </style>

    <style name="incorrectInputTextStyle">
        <item name="android:textColor">?colorWrongText</item>
    </style>

    <style name="nextButtonTextStyle">
        <item name="android:textSize">@dimen/medium_text_size</item>
        <item name="android:textColor">?colorToolbarTitle</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="createMarkerTextStyle">
        <item name="android:textSize">@dimen/medium_text_size</item>
        <item name="android:textColor">?colorToolbarTitle</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="postButtonStyle">
        <item name="android:background">@drawable/background_item_reaction_selector</item>
        <item name="android:paddingHorizontal">@dimen/vertical_small_margin</item>
        <item name="android:paddingVertical">2dp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="commentButtonStyle">
        <item name="android:background">@drawable/background_comment_selector</item>
        <item name="android:paddingHorizontal">@dimen/vertical_small_margin</item>
        <item name="android:paddingVertical">2dp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="tint">?colorHelpButtonIcon</item>
    </style>

    <style name="postItemHeaderTextStyle">
        <item name="android:textColor">?colorPrimaryText</item>
        <item name="android:textSize">@dimen/medium_text_size</item>
    </style>

    <style name="itemContentTextStyle">
        <item name="android:textColor">?colorSecondaryText</item>
        <item name="android:textSize">@dimen/pre_medium_text_size</item>
    </style>

    <style name="itemDateTextStyle">
        <item name="android:textColor">?colorTertiaryText</item>
        <item name="android:textSize">@dimen/pre_medium_text_size</item>
    </style>

    <style name="appreciationsTextStyle">
        <item name="android:textColor">?colorTertiaryText</item>
        <item name="android:textSize">@dimen/pre_medium_text_size</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="addressItemHeaderTextStyle">
        <item name="android:textColor">?colorPrimaryText</item>
        <item name="android:textSize">@dimen/medium_text_size</item>
    </style>

    <style name="addressItemSubheaderTextStyle">
        <item name="android:layout_marginTop">@dimen/vertical_very_small_margin</item>
        <item name="android:textColor">?colorSecondaryText</item>
        <item name="android:textSize">@dimen/small_text_size</item>
    </style>

    <style name="addMarkerButtonTextStyle">
        <item name="android:textSize">@dimen/medium_text_size</item>
        <item name="android:textColor">?colorNavigationItemIcon</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>