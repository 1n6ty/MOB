<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.MOBv2.DayNight" parent="Theme.MOBv2" />

    <!-- Base application theme. -->
    <style name="Theme.MOBv2" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_500</item>
        <item name="colorPrimaryVariant">@color/blue_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/blue_100_alpha</item>
    </style>

    <style name="Theme.MOBv2.AppBarOverlayLight" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.MOBv2.AppBarOverlayDark" parent="ThemeOverlay.AppCompat.DayNight.ActionBar" />

    <style name="Theme.MOBv2.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.MOBv2.NavigationView">
        <item name="android:listDivider">@color/white</item>
    </style>

    <style name="Theme.MOBv2.NoActionBar.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
</resources>