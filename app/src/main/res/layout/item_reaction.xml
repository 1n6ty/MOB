<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/vertical_very_small_margin"
    android:background="@drawable/background_selector_reaction"
    android:clickable="true"
    android:focusable="true"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="@dimen/horizontal_small_margin"
        android:layout_marginVertical="@dimen/vertical_very_small_margin">

        <TextView
            android:id="@+id/reaction"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/item_reaction_this" />

        <TextView
            android:id="@+id/count"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/horizontal_very_small_margin"
            android:text="@string/item_reaction_count"
            android:textColor="@color/blue_500" />
    </LinearLayout>
</LinearLayout>