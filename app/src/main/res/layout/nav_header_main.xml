<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="bindingContext"
            type="com.example.mobv2.ui.fragments.main.MainFragmentViewModel" />
    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_background"
        android:gravity="bottom"
        android:orientation="vertical"
        android:paddingHorizontal="@dimen/horizontal_margin"
        android:paddingVertical="@dimen/vertical_margin"
        android:theme="@style/ThemeOverlay.AppCompat.Dark">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/toolbar_rest_margin_top"
            android:orientation="vertical">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/avatar_view"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginBottom="@dimen/vertical_margin"
                android:contentDescription="@string/sample_avatar_desc"
                android:scaleType="centerCrop"
                app:shapeAppearance="@style/circleImageViewStyle"
                app:srcCompat="@drawable/sample_avatar" />

            <TextView
                android:id="@+id/fullname_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@{bindingContext.fullname}"
                android:textAppearance="@style/navHeaderTitleStyle"
                tools:text="@string/sample_fullname" />

            <TextView
                android:id="@+id/address_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="@{bindingContext.address}"
                android:textAppearance="@style/navSubheaderTitleStyle"
                tools:text="@string/sample_address" />
        </LinearLayout>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>