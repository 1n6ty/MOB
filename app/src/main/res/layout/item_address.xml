<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="@dimen/horizontal_margin"
        android:paddingBottom="@dimen/vertical_small_margin"
        android:background="@drawable/background_item_address_selector"
        android:clickable="true"
        android:focusable="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/address_secondary_view"
            style="@style/addressItemHeaderTextStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/address_secondary" />

        <TextView
            android:id="@+id/address_primary_view"
            style="@style/addressItemSubheaderTextStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/address_primary"
            app:layout_constraintTop_toBottomOf="parent" />
    </LinearLayout>
</layout>