<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:openDrawer="end">

    <FrameLayout
        android:id="@+id/nav_content_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.example.mobv2.ui.views.navigationdrawer.NavDrawerView
        android:id="@+id/navigation_view"
        android:layout_width="@dimen/nav_width"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        android:theme="@style/Theme.MOBv2.NavigationView"
        app:headerLayout="@layout/nav_header_main"
        app:itemIconTint="@color/gray_200"
        app:itemTextAppearance="@style/navItemTextStyle"
        app:itemTextColor="@color/gray_700"
        app:subheaderTextAppearance="@style/navSubheaderStyle" />
</androidx.drawerlayout.widget.DrawerLayout>
