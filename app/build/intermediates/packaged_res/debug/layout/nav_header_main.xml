<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_height"
    android:background="@drawable/ic_background"
    android:orientation="vertical"
    android:gravity="bottom"
    android:paddingHorizontal="@dimen/horizontal_margin"
    android:paddingVertical="@dimen/vertical_margin"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/imageView"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:contentDescription="@string/sample_avatar_desc"
        android:scaleType="centerCrop"
        app:shapeAppearance="@style/circleImageViewStyle"
        android:layout_marginBottom="@dimen/vertical_margin"
        app:srcCompat="@drawable/sample_avatar" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/sample_username"
        android:textAppearance="@style/navHeaderTitleStyle" />

